rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is an admin
    function isAdmin() {
      return isAuthenticated() &&
             request.auth.token.email != null;
    }

    // Regulations storage rules - match any file in regulations/{residenceId}/
    match /regulations/{residenceId}/{fileName} {
      // Anyone authenticated can read (download) regulation PDFs
      allow read: if isAuthenticated();

      // Only admins can upload regulation PDFs
      // File must be PDF and under 10MB
      allow write: if isAdmin() &&
                     request.resource.size <= 10 * 1024 * 1024 &&
                     request.resource.contentType == 'application/pdf';

      // Only admins can delete regulation PDFs
      allow delete: if isAdmin();
    }

    // Residence images - match any file in residences/{residenceId}/
    match /residences/{residenceId}/{fileName} {
      allow read: if true;
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}